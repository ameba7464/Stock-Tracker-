# Docker Compose Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=stock_tracker
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=stock_tracker

# =============================================================================
# Security (CRITICAL - Generate secure keys!)
# =============================================================================
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_this_to_random_secret_key_at_least_32_chars

# Generate FERNET_KEY: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=change_this_to_fernet_key_generated_with_cryptography

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=production
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================
# Sentry DSN (optional - sign up at sentry.io)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_TENANT=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Grafana
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password

# =============================================================================
# External APIs (for testing)
# =============================================================================
WILDBERRIES_API_KEY=your_test_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
