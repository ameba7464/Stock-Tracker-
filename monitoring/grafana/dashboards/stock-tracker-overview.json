{
  "dashboard": {
    "title": "Stock Tracker Overview",
    "tags": ["stock-tracker", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(stock_tracker_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} ({{status_code}})"
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(stock_tracker_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Tenants",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "stock_tracker_active_tenants"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "rate(stock_tracker_errors_total[5m])"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(stock_tracker_cache_hits_total[5m]) / (rate(stock_tracker_cache_hits_total[5m]) + rate(stock_tracker_cache_misses_total[5m]))"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 1,
            "min": 0,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 6,
        "title": "Sync Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(stock_tracker_sync_duration_seconds_bucket[5m]))",
            "legendFormat": "{{tenant_id}} ({{marketplace}})"
          }
        ]
      },
      {
        "id": 7,
        "title": "Errors by Type",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "topk(10, sum by (error_type) (rate(stock_tracker_errors_total[5m])))",
            "format": "table",
            "instant": true
          }
        ]
      }
    ]
  }
}
